<div class="sidebar @_menuState">
    <div class="sidebar-header">
        <button class="menu-toggle" @onclick="ToggleMenu" title="باز/بستن منو">
            <span class="toggle-icon"></span>
        </button>
        <div class="navbar-brand center">هشیارسنج</div>
    </div>

    <div class="nav-content">
        <nav class="nav-menu">
            <div class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="nav-icon bi bi-calculator"></span>
                    <span class="nav-text">محاسبه</span>
                </NavLink>
            </div>
            <div class="nav-item">
                <NavLink class="nav-link" href="drinks">
                    <span class="nav-icon bi bi-list-ul"></span>
                    <span class="nav-text">لیست نوشیدنی ها</span>
                </NavLink>
            </div>
        </nav>
    </div>
</div>

@code {
    private string _menuState = "expanded";

    private void ToggleMenu()
    {
        _menuState = _menuState == "expanded" ? "collapsed" : "expanded";
    }
}